<div class='container'>

  <div class="row my-1">
    <div class="col-12">
      <div class=" dropdown">
        <button class="border-dark text-left form-control btn btn-light btn-sm dropdown-toggle" type="button"
          id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          類別
        </button>
        <div class="w-100 dropdown-menu" aria-labelledby="dropdownMenuButton">
          <a class="dropdown-item" href="/">全部</a>
          <a class="dropdown-item" href="/sort/家居物業">家居物業</a>
          <a class="dropdown-item" href="/sort/交通出行">交通出行</a>
          <a class="dropdown-item" href="/sort/休閒娛樂">休閒娛樂</a>
          <a class="dropdown-item" href="/sort/餐飲食品">餐飲食品</a>
          <a class="dropdown-item" href="/sort/其他">其他</a>
        </div>
      </div>
    </div>
  </div>

  <div class="row my-1">
    <div class="col-2 ">
      <h6 class="mx-auto">總金額:</h6>
    </div>
    <div class="col-auto mr-auto">
      <h1 class="mx-auto text-danger">{{totalAmount}}</h1>
    </div>


  </div>

  <ui class="list-group">
    {{#each records}}
    <li class="list-group-item">
      <div class="row">
        <div class="col-2 pr-0 bg-light">
          <h3 class='mt-1 fas {{this.image}} text-info'></h3>
        </div>
        <div class="col-3 pl-0 bg-light">
          <div class="row">
            <div class="col-12">
              <div class="font-weight-bold">{{this.name}}</div>
            </div>
            <div class="col-12">
              {{this.date}}
            </div>
          </div>
        </div>
        <div class="col-3 bg-light  d-flex align-items-center">
          店名:<br>
          {{this.merchant}}
        </div>
        <div class="col-2 bg-light  d-flex align-items-center">
          金額:<br>
          {{this.amount}}
        </div>
        <div class="col-2 d-flex align-items-center">
          <a class="p-2 mx-1 badge badge-light" href="/records/{{this._id}}/edit">修改</a>
          <a class="p-2 mx-1 badge badge-light" href="/records/{{this._id}}/delete">刪除</a>
        </div>
      </div>
    </li>

    {{/each}}
  </ui>

  <div class="row my-3 ">
    {{!-- <div class="col-3"></div> --}}
    <div class="col-auto mx-auto">
      <a class='btn btn-warning mx-auto border-dark text-white px-4 font-weight-bold' href="/records/new">新增支出</a>
    </div>
    {{!-- <div class="col-3"></div> --}}

  </div>
</div>