<h1>老爸的私房錢</h1>
<a href="./records/new">新增支出</a>
<ul>
  {{#each records}}
  <div class='container'>
    <div class='row fas {{this.image}}'>
      <div>
        {{this.category}}
        {{this.name}}
        {{this.date}}
        {{this.amount}}
      </div>
      <div>
        <a href="./records/{{this._id}}/edit">修改</a>
        <a href="./records/{{this._id}}/delete">刪除</a>
      </div>

    </div>
  </div>
  {{/each}}
</ul>