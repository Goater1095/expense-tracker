<div class='container'>
  <div class="row my-1">
    <div class="col-3"></div>
    <div class="col-6">
      <div class="dropdown">
        <button class="btn btn-light dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown"
          aria-haspopup="true" aria-expanded="false">
          類別
        </button>
        <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
          <a class="dropdown-item" href="#">Action</a>
          <a class="dropdown-item" href="#">Another action</a>
          <a class="dropdown-item" href="#">Something else here</a>
        </div>
      </div>
    </div>
    <div class="col-3"></div>
  </div>
  <div class="row my-1">
    <div class="col-3"></div>
    <div class="col-6">
      <div class="mx-auto">總金額:</div>
    </div>
    <div class="col-3"></div>

  </div>
  {{!-- <div class="row my-2"> --}}
  <ui class="list-group">
    {{#each records}}
    <li class="list-group-item">
      <div class="row">
        <div class="col-2 pr-0 bg-light">
          <h3 class='mt-1 fas {{this.image}}'></h3>
        </div>
        <div class="col-5 pl-0 bg-light">
          <div class="row">
            <div class="col-12">
              {{this.category}}
              {{this.name}}
            </div>
            <div class="col-12">
              {{this.date}}
            </div>
          </div>
        </div>
        <div class="col-2 bg-light  d-flex align-items-center">
          {{this.amount}}
        </div>
        <div class="col-3 d-flex align-items-center">
          <a class="p-2 mx-1 badge badge-light" href="./records/{{this._id}}/edit">修改</a>
          <a class="p-2 mx-1 badge badge-light" href="./records/{{this._id}}/delete">刪除</a>
        </div>
      </div>

    </li>

    {{/each}}
  </ui>

  {{!-- </div> --}}
  <div class="row my-3 ">
    {{!-- <div class="col-3"></div> --}}
    <div class="col-auto mx-auto">
      <a class='btn btn-warning mx-auto border-dark text-white px-4 font-weight-bold' href="./records/new">新增支出</a>
    </div>
    {{!-- <div class="col-3"></div> --}}

  </div>
</div>